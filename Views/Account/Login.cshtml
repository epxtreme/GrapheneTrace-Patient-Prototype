@{
    ViewBag.Title = "Patient Login";
}

<!-- Full-page centering -->
<div style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background-color: #f5f5f5;">

    <!-- Rounded white card -->
    <div style="width: 380px; background-color: #ffffff; border-radius: 18px; padding: 32px 28px 26px 28px; box-shadow: 0 12px 30px rgba(0,0,0,0.06);">

        <!-- Big heading -->
        <h1 style="font-size: 22px; line-height: 1.3; margin: 0 0 18px 0; font-weight: 700; text-align: center;">
            Welcome to Graphene<br />
            Trace Patient Portal
        </h1>

        <!-- Subheading -->
        <div style="margin-bottom: 18px;">
            <div style="font-weight: 600; font-size: 14px; margin-bottom: 4px;">
                Log in
            </div>
            <p style="margin: 0; font-size: 12px; color: #777;">
                Log in by entering your email address and password.
            </p>
        </div>

        <!-- Form -->
        <form method="post">
            <!-- Email -->
            <div style="margin-bottom: 12px;">
                <label for="email" style="font-size: 12px; font-weight: 600;">Email address</label><br />
                <div style="display: flex; align-items: center; border: 1px solid #ddd; border-radius: 6px; padding: 0 10px; margin-top: 4px; background-color: #fafafa;">
                    <span style="font-size: 14px; margin-right: 6px;">üìß</span>
                    <input id="email"
                           type="text"
                           name="email"
                           placeholder="email@address.com"
                           style="border: none; outline: none; padding: 8px 0; flex: 1; font-size: 13px; background-color: transparent;" />
                </div>
            </div>

            <!-- Password -->
            <div style="margin-bottom: 8px;">
                <label for="password" style="font-size: 12px; font-weight: 600;">Password</label><br />
                <div style="display: flex; align-items: center; border: 1px solid #ddd; border-radius: 6px; padding: 0 10px; margin-top: 4px; background-color: #fafafa;">
                    <span style="font-size: 14px; margin-right: 6px;">üîí</span>
                    <input id="password"
                           type="password"
                           name="password"
                           placeholder="‚óè‚óè‚óè‚óè‚óè‚óè‚óè‚óè"
                           style="border: none; outline: none; padding: 8px 0; flex: 1; font-size: 13px; background-color: transparent;" />
                    <span style="font-size: 12px; color: #999;">üëÅÔ∏è</span>
                </div>
            </div>

            <!-- Forgot password link -->
            <div style="text-align: left; margin-bottom: 10px;">
                <a href="#" style="font-size: 11px; color: #2563eb; text-decoration: none;">Forgot password?</a>
            </div>

            <!-- Error message, if any -->
            @if (!string.IsNullOrEmpty(ViewBag.Error as string))
            {
                <div style="color: #d32f2f; font-size: 12px; margin-bottom: 8px;">
                    @ViewBag.Error
                </div>
            }

            <!-- Main login button -->
            <button type="submit"
                    style="width: 100%; padding: 10px; margin-top: 2px; background-color: #000000; color: #ffffff; border: none; border-radius: 999px; font-size: 14px; font-weight: 600; cursor: pointer;">
                Log in
            </button>

            <!-- Remember me -->
            <div style="display: flex; align-items: center; margin-top: 10px; font-size: 12px;">
                <div style="width: 32px; height: 18px; border-radius: 9px; border: 1px solid #ccc; margin-right: 8px; background-color: #f0f0f0; position: relative;">
                    <div style="width: 14px; height: 14px; border-radius: 999px; background-color: #ffffff; border: 1px solid #ccc; position: absolute; top: 1px; left: 1px;"></div>
                </div>
                <span>Remember me</span>
            </div>

            <!-- Divider -->
            <div style="display: flex; align-items: center; margin: 14px 0;">
                <div style="flex: 1; height: 1px; background-color: #e5e5e5;"></div>
                <span style="font-size: 11px; color: #999; margin: 0 8px;">Or</span>
                <div style="flex: 1; height: 1px; background-color: #e5e5e5;"></div>
            </div>

            <!-- Google button (visual only) -->
            <button type="button"
                    style="width: 100%; padding: 9px; background-color: #ffffff; border-radius: 999px; border: 1px solid #ddd; font-size: 13px; display: flex; align-items: center; justify-content: center; gap: 8px; cursor: default;">
                <span style="font-size: 16px;">üü¢</span>
                <span>Sign in with Google</span>
            </button>

            <!-- Sign up text -->
            <p style="margin-top: 16px; font-size: 11px; color: #777; text-align: center;">
                Don't have an account?
                <a href="#" style="color: #2563eb; text-decoration: none;">Sign up here</a>
            </p>
        </form>
    </div>
</div>
