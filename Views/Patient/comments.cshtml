@model List<GrapheneTrace.Models.Comment>

@{
    ViewBag.Title = "Previous Comments Page";
}

<div style="display: flex; min-height: calc(100vh - 80px);">

    <!-- LEFT SIDEBAR (same as other pages) -->
    <div style="width: 230px; background-color: #f2f2f2; padding: 15px; border-right: 1px solid #ddd;">
        <div style="font-weight: bold; margin-bottom: 20px;">
            GrapheneTrace Patient Page
        </div>

        <!-- Search box -->
        <input type="text"
               placeholder="Search"
               style="width: 100%; padding: 6px; margin-bottom: 15px; border: 1px solid #ccc; border-radius: 3px;" />

        <!-- Sidebar buttons (same labels as low-fi) -->
        <button style="width: 100%; padding: 8px; margin-bottom: 8px;
                       background-color: #dcdcdc; border: 1px solid #ccc;
                       text-align: left;">
            Dashboard (selected)
        </button>

        <button style="width: 100%; padding: 8px; margin-bottom: 8px;
                       background-color: #ffffff; border: 1px solid #ccc;
                       text-align: left;">
            Reports
        </button>

        <button style="width: 100%; padding: 8px; margin-bottom: 8px;
                       background-color: #ffffff; border: 1px solid #ccc;
                       text-align: left;">
            Analytics
        </button>

        <button style="width: 100%; padding: 8px; margin-bottom: 8px;
                       background-color: #ffffff; border: 1px solid #ccc;
                       text-align: left;">
            Inbox
        </button>

        <button style="width: 100%; padding: 8px; margin-bottom: 8px;
                       background-color: #ffffff; border: 1px solid #ccc;
                       text-align: left;">
            Media
        </button>

        <button style="width: 100%; padding: 8px; margin-bottom: 8px;
                       background-color: #ffffff; border: 1px solid #ccc;
                       text-align: left;">
            Calander
        </button>

        <button style="width: 100%; padding: 8px; margin-bottom: 8px;
                       background-color: #ffffff; border: 1px solid #ccc;
                       text-align: left;">
            Visitors
        </button>

        <button style="width: 100%; padding: 8px; margin-bottom: 8px;
                       background-color: #ffffff; border: 1px solid #ccc;
                       text-align: left;">
            Settings
        </button>
    </div>

    <!-- MAIN CONTENT -->
    <div style="flex: 1; padding: 25px;">

        <!-- Page title (top left) -->
        <h3 style="margin-bottom: 15px;">Previous comments Page</h3>

        <!-- Centre heading -->
        <h2 style="text-align: center; margin-bottom: 20px;">
            Previous comments Ephraim
        </h2>

        <!-- Outer box holding all comments -->
        <div style="border: 1px solid #ccc; padding: 15px; border-radius: 4px;">

            @if (Model != null && Model.Count > 0)
            {
                foreach (var comment in Model)
                {
                    <div style="border: 1px solid #ddd;
                                padding: 10px;
                                margin-bottom: 10px;
                                border-radius: 3px;
                                display: flex;
                                justify-content: space-between;">
                        <span>- @comment.Text</span>
                        <span style="font-size: 11px; color: #666;">(timestamp: @comment.CreatedAt.ToString("g"))</span>
                    </div>
                }
            }
            else
            {
                <p>No comments have been added yet.</p>
            }
        </div>

        <!-- Pagination buttons (static, for design only) -->
        <div style="margin-top: 15px; text-align: center;">
            <button style="padding: 3px 12px; margin: 0 2px;">1</button>
            <button style="padding: 3px 12px; margin: 0 2px;">2</button>
            <button style="padding: 3px 12px; margin: 0 2px;">3</button>
            <button style="padding: 3px 12px; margin: 0 2px;">4</button>
        </div>

        <!-- Back to dashboard button -->
        <div style="margin-top: 15px; text-align: center;">
            <a asp-controller="Patient" asp-action="Dashboard"
               style="display: inline-block;
                      padding: 6px 18px;
                      border: 1px solid #ccc;
                      background-color: #f2f2f2;
                      text-decoration: none;
                      color: black;">
                Back to dashboard
            </a>
        </div>

    </div>
</div>
